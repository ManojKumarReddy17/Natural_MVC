    <!-------------------------------------------------------------FORM START------------------------------------------------>
    <section class="login-container">
        <div class="login-box">
            <h3 class="text-center">Sign in</h3>
            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new{@class="logForm"}))
            {
                <div class="form-group mb-2">
                    <label for="username">Username or email</label>
                    <input type="text" class="form-control" id="username" name="UserName" placeholder="Username or email" required>
                </div>
                <label for="password">
                    <i class="material-icons">lock</i>
                    Password
                </label>

                <div class="password-container w-100 mb-2">
                    <input class="form-control " type="password" id="password" name="password" placeholder="Enter Password" pattern=".{6,}" title="Password must be at least 6 characters long" required>
                    <i class="fa fa-eye-slash" id="togglePassword"></i>
                </div>
                <div class="form-group23 form-check d-flex justify-content-between mb-5">
                    <div>
                        <input type="checkbox" class="form-check-input" id="remember">
                        <label class="form-check-label" for="remember">Remember</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-danger btn-block">Login</button>
            }
            <b>@Html.ValidationSummary(false, "", new { @class = "text-danger" })</b>
        </div>
    </section>

