        function statechange() {
            var defaultStateId = '@defaultStateId';
            var defaultCityId = '@defaultCityId';
            var stid = $('#state').val() == null ? defaultStateId : $('#state').val();
            if (stid.trim() != '') {
                var ddlcity = $('#city');
                ddlcity.empty();
                $("executive").empty();
                $("distributor").empty();
                $("retialor").empty();
               
                $.ajax(
