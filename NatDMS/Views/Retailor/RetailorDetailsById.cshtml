@model NatDMS.Models.RetailorViewModel

@{
    ViewData["Title"] = "RetailorDetailsById";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-r5ID+CgK5ba4ZL3a39OXhMWSktQOp6cJS7wePqOx6bSSUnQlmh/jQ9vS9z5+X68+H" crossorigin="anonymous">

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<style>
    .blue-text {
        color: firebrick;
    }

    .bold-text {
        font-weight: bold;
    }

    .info-box {
        border: 2px solid brown;
        padding: 20px;
        margin-top: 20px; /* Adjust margin as needed */
    }

    .wrap-text {
        word-wrap: break-word; /* Ensures long words break to fit the container */
        white-space: normal; /* Ensures the text wraps normally */
    }
</style>

<div class="container mt-4">
    <div class="row d-flex justify-content-center">
        <div class="col-md-5 text-left">
            <div class="d-flex justify-content-end">
                <a href="@Url.Action("EditRetailor", new { id = Model.Id })" class="d-flex align-items-end">
                    <i class="material-icons" style="font-size:20px;">edit</i>
                    <span class="ml-2" style="font-weight:bold;">Edit</span>
                </a>
            </div>

            <div class="info-box">
                <dl class="row">
                    <dt class="col-sm-5 blue-text">
                        @Html.DisplayNameFor(model => model.RetailerName)
                    </dt>
                    <dd class="col-sm-7 bold-text">
                        @Html.DisplayFor(model => model.FirstName)
                    </dd>

                    <dt class="col-sm-5 blue-text">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-7 bold-text">
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                    <dt class="col-sm-5 blue-text">
                        @Html.DisplayNameFor(model => model.MobileNumber)
                    </dt>
                    <dd class="col-sm-7 bold-text">
                        @Html.DisplayFor(model => model.MobileNumber)
                    </dd>

                    <dt class="col-sm-5 blue-text">
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>
                    <dd class="col-sm-7 bold-text wrap-text">
                        @Html.DisplayFor(model => model.Address)
                    </dd>

                    <dt class="col-sm-5 blue-text">
                        @Html.DisplayNameFor(model => model.State)
                    </dt>
                    <dd class="col-sm-7 bold-text">
                        @Html.DisplayFor(model => model.State)
                    </dd>

                    <dt class="col-sm-5 blue-text">
                        @Html.DisplayNameFor(model => model.City)
                    </dt>
                    <dd class="col-sm-7 bold-text">
                        @Html.DisplayFor(model => model.City)
                    </dd>

                   @*  <dt class="col-sm-5 blue-text">
                        @Html.DisplayNameFor(model => model.Area)
                    </dt>
                    <dd class="col-sm-7 bold-text">
                        @Html.DisplayFor(model => model.Area)
                    </dd> *@
                    <dt class="col-sm-5 blue-text">
                        @Html.DisplayNameFor(model => model.Image)
                    </dt>
                    <dd class="col-sm-7 bold-text">
                       @* @if (!string.IsNullOrEmpty(Model.Image))
                        {

                            <img src="@Model.Image" alt="ProfileImage" width="160" height="160" class="img-responsive" id="presignedurl" />
                        }
                        else
                        {
                            <!-- Display a default "no image" placeholder -->
                            <img class="card-img-top img-fluid" src="~/image/no-image-placeholder.svg" alt="No Image">
                        }*@
                     @*   @if (!string.IsNullOrEmpty(Model.Image))
                        {

                            <img src="@Model.Image" alt="ProfileImage" width="90" height="90" class="img-responsive" id="presignedurl" />
                        }
                        else
                        {
                            <!-- Display a default "no image" placeholder -->
                            <img class="card-img-top img-fluid" src="~/image/no-image-placeholder.svg" alt="No Image">
                        }**@
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {

                            <img src="@Model.Image" alt="ProfileImage" width="80" height="80" class="img-responsive" id="presignedurl" />
                        }
                        else
                        {
                            <!-- Display a default "no image" placeholder -->
                            <img src="~/image/no-image-placeholder.svg" alt="No Image" width="50" height="50">
                        }
                    </dd>

                    <dt class="col-sm-5 blue-text">
                        @Html.DisplayNameFor(model => model.Latitude)
                    </dt>
                    <dd class="col-sm-7 bold-text">
                        @Html.DisplayFor(model => model.Latitude)
                    </dd>
                    <dt class="col-sm-5 blue-text">
                        @Html.DisplayNameFor(model => model.Longitude)
                    </dt>
                    <dd class="col-sm-7 bold-text">
                        @Html.DisplayFor(model => model.Longitude)
                    </dd>

                </dl>
            </div>
        </div>

        <div class="text-center py-1">
            <a href="@Url.Action("DisplayRetailors")" class="d-flex align-items-center">
                <i class="material-icons" style="font-size:20px;">arrow_back</i>
                <span class="ml-2" style="font-weight: bold;">BACK TO LIST</span>
            </a>
        </div>
    </div>
</div>
